@using MyCv.Models.Entity
@model List <Experiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h2>Index Lists</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>
            <td>@item.Date</td>
            <td><a href="/Experience/DeleteExp/@item.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Experience/FindExp/@item.ID" class="btn btn-warning">Edit</a></td>

        </tr>
    }
</table>
<a href="/Experience/AddExperience" class="btn btn-primary">Add New Experience</a>
