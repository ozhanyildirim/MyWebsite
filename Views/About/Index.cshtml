@using MyCv.Models.Entity
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>About Page</h2>

<form method="post">
    @foreach (var item in Model)
    {
        <label>Name</label>
        <input type="text" name="Name" value="@item.Name" class="form-control" />
        <br />
        <label>Surname</label>
        <input type="text" name="Surname" value="@item.Surname" class="form-control" />
        <br />
        <label>Phone</label>
        <input type="text" name="Phone" value="@item.Phone" class="form-control" />
        <br />
        <label>Adress</label>
        <input type="text" name="Adress" value="@item.Adress" class="form-control" />
        <br />
        <label>Email</label>
        <input type="text" name="Email" value="@item.Email" class="form-control" />
        <br />
        <label>Image</label> 
        <input type="text" name="Image" value="@item.Image" class="form-control" />
        <br />
        <label>Explanation</label>
        <textarea rows="1" name="Explanation" class="form-control">@item.Explanation</textarea>
        <br />
    }

    <button class="btn btn-info"> Edit About </button>

</form>