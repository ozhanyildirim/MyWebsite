@using MyCv.Models.Entity
@model List<Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Contact Index</h2>


<!DOCTYPE html>
<html lang="en">

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <!-- The timeline -->
                            <div class="timeline timeline-inverse">
                                @foreach (var item in Model)
                                {
                                    <div class="time-label">
                                        <span class="bg-info">
                                            @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))
                                        </span>
                                    </div>
                                    <!-- timeline time label -->
                                    <div>

                                        <i class="fas fa-comments bg-warning"></i>

                                        <div class="timeline-item">
                                            <span class="time"><i class="far fa-envelope"></i> @item.Mail</span>

                                            <h3 class="timeline-header"><a href="#">@item.NameSurname </a>->  @item.Subject</h3>

                                            <div class="timeline-body">
                                                @item.Message
                                            </div>
                                            
                                        </div>
                                    </div>
                                }
                                <div>
                                    <i class="far fa-clock bg-gray"></i>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.tab-content -->
                </div><!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    
    </div>
   
    <aside class="control-sidebar control-sidebar-dark">
  
    </aside>
 
   
</body>
</html>
