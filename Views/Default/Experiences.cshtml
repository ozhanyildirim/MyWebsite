
@using MyCv.Models.Entity
@model List<Experiences>


<div class="resume-section-content">
    <h2 class="mb-5" { style = "color:#bd5d38"} }>Experiences</h2>
    @foreach (var x in Model)
    {
        <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
            <div class="flex-grow-1">
                <h3 class="mb-0">@x.Title</h3>
                <div class="subheading mb-3 " { style = "color:#bd5d38"}>@x.Subtitle</div>
                <p>@x.Explanation</p>
            </div>
            <div class="flex-shrink-0"><span class="text-primary">@x.Date</span></div>
        </div>
    }
</div>